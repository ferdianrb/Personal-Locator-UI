<main class="main-login">
    <div class="container" style="padding-top:80px;">
        <div class="row">
            
            <div class="col-12 col-lg-2">

            </div>
            <div class="col-12 col-lg-8">
                <div class="row brand-login align-items-center justify-content-center">
                    <div class="col-12 col-lg-6" style="text-align: center;">
                        <h1>Add Person</h1>
                        <h6 style="font-weight:300;">{{today}}</h6>
                        <br />
                        
                    </div>
                    
                    <div class="col-12 col-md-8 col-lg-6 login-form">
                      <div class="col-12 p-0" style="text-align: center; margin-bottom: 1rem;">
                        <div class="row justify-content-center">
                          <div class="col-5" style="padding-right:3px;">
                            <a href="/admin" class="btn btn-primary ps-button" style="background-color:#fff;color:#314495;border:none;font-weight:900;padding: 0.6rem 0;width:100%;">Home</a>
                          </div>
                          <div class="col-5" style="padding-left:3px;">
                            <a href="/admin/logout" class="btn btn-primary ps-button" style="background-color:#fff;color:#314495;border:none;font-weight:900;padding: 0.6rem 0;width:100%;">Logout</a>
                          </div>
                        </div>
                      </div>
                      <br />
                      <form method="POST" action="/api/addperson">
                          <div class="form-group">
                              <input type="text" id="name" class="psloc-form" name="name" placeholder="Full Name" required>
                              <input type="text" id="address" onkeypress="this.value=macAdd(this.value)" maxlength="17" class="psloc-form" name="address" placeholder="Ex: 78:02:F4:1B:91:C4" required>
                          </div>
                          <div class="row">
                            <div class="col-12">
                              <input class="btn btn-primary ps-button" type="submit" value="Add" style="background-color:#4caf50;border:none;font-weight:900;padding: 0.6rem 0;width:100%;">
                            </div>
                          </div>
                          
                      </form>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-2">

            </div>

        </div>
    </div>

</main>

