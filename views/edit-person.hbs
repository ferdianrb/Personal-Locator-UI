    <div class="add-person-form-wrapper col-12">
      <h4 style="text-align:center">Person Info</h4>
      <form method="POST" action="/api/putperson/{{person._id}}" class="add-person-form">
        <div class="form-group">
          <label for="name">Name :</label>
          <input class="form-control" id="name" type="text" placeholder="Full Name" name="name" value="{{person.name}}" required>
        </div>
        <div class="form-group">
          <label for="address">Device Address (Bluetooth Address) :</label>
          <input class="form-control" id="address" type="text" placeholder="Ex: 78:02:F4:1B:91:C4" name="address" value="{{person.address}}" required>
        </div>
        <input class="btn btn-primary ps-button" type="submit" value="UPDATE"><span style="float:right"><a href="/api/delperson/{{person._id}}" style="color:red">Delete Person</a></span>
      </form>
    </div>
